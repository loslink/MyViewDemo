<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.loslink.myview.widget.FlexBoxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_recycler"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="拼图"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/bt_1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="曲线特效"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="旋转动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="清理圆圈动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="文字"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="风扇动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="UFO清理"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="CPU动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="开关"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_9"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="浮球"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_10"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="清理新动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_11"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="清理动画2"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_12"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="省电主页动画"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_13"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="线条"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_14"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="地图"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_15"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Scllor"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/bt_16"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="瀑布流布局"
                android:layout_marginBottom="5dp"/>

        </com.loslink.myview.widget.FlexBoxLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
